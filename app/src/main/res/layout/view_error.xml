<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xl"
    android:background="@color/md_theme_background">

    <!-- Error Icon -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/spacing_xl"
        app:cardCornerRadius="60dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/md_theme_secondaryContainer">

        <ImageView
            android:id="@+id/errorIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:src="@drawable/baseline_image_not_supported_24"
            android:contentDescription="@string/error_loading_photos"
            app:tint="@color/md_theme_secondary" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Error Title -->
    <TextView
        android:id="@+id/errorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_loading_photos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onBackground"
        android:gravity="center" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_s"
        android:text="@string/no_connection"
        android:textSize="14sp"
        android:textColor="@color/md_text_secondary"
        android:gravity="center"
        android:maxWidth="280dp" />

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        android:text="@string/retry"
        android:paddingStart="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_xl" />

</LinearLayout>
