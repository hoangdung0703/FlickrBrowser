<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_m"
    app:cardElevation="@dimen/elev_s"
    app:cardCornerRadius="@dimen/radius_m"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần thông tin tác giả -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ownerAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="Photographer Name" />

        </LinearLayout>

        <!-- Ảnh chính -->
        <ImageView
            android:id="@+id/photoImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:maxHeight="400dp"
            android:contentDescription="Main photo"/>

        <!--
        ============================================================
        THAY ĐỔI Ở ĐÂY: Sửa lại cách bố trí các nút tương tác
        ============================================================
        -->

        <!-- Tiêu đề ảnh -->
        <TextView
            android:id="@+id/photoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            tools:text="Honoring Hispanic Heritage Month"/>

        <!-- Hàng nút tương tác (Tim, Bình luận, Chia sẻ) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical">

            <!-- Nút Favorite (Tim) - bên trái -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFavorite"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/outline_favorite_24"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                tools:text="295"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"/>

            <!-- Spacer trái -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Nút Comment - ở giữa -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComment"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:icon="@drawable/ic_comment"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:textSize="14sp"
                tools:text="13" />

            <!-- Spacer phải -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Nút Share - bên phải -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_share"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="20dp"
                app:iconGravity="start"
                app:iconPadding="0dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

