<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Toolbar ở trên cùng -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:title=""
        app:titleCentered="false"
        app:contentInsetStartWithNavigation="0dp" />

    <!--
    ============================================================
    SỬA LỖI Ở ĐÂY: Đã đổi tên các ID để tránh trùng lặp
    ============================================================
    -->

    <!-- SwipeRefreshLayout để làm mới -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_photo" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Giao diện Shimmer khi tải dữ liệu -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        app:shimmer_duration="1000"
        android:visibility="gone">
        <!-- Bạn có thể tạo một layout shimmer riêng cho dạng list nếu muốn -->
        <include layout="@layout/include_shimmer_grid" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Giao diện khi không có dữ liệu -->
    <include
        android:id="@+id/emptyViewHome"
        layout="@layout/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone" />

</RelativeLayout>

